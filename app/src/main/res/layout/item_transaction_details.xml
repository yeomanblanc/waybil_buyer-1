<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">


        <LinearLayout
            android:id="@+id/constraintLayout_transaction"
            android:layout_marginBottom="4dp"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal"
            android:background="@drawable/light_rectangle"
            android:elevation="4dp"
            >

            <TextView
                android:id="@+id/customerName_transaction"
                style="@style/DarkFont"
                android:layout_width="0dp"
                android:visibility="gone"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="2dp"
                android:gravity="center"
                android:text="-"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/date_transactions"
                style="@style/DarkFont"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:text="---"
                android:gravity="center"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/totalValue_transactions"
                style="@style/DarkFont"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginEnd="4dp"
                android:gravity="center"
                android:text="-"
                android:textSize="12sp" />
        </LinearLayout>



</layout>
